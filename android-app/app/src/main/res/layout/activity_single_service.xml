<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ui.movielist.SingleService">

    <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="25sp" app:layout_constraintTop_toTopOf="parent" tools:layout_editor_absoluteX="16dp"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	app:layout_constraintTop_toBottomOf="@+id/title"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/sellername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	app:layout_constraintTop_toBottomOf="@+id/description"
        android:textColor="@android:color/black" />
    <TextView
        android:id="@+id/sellerusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	app:layout_constraintTop_toBottomOf="@+id/sellername"
        android:textColor="@android:color/black" />
    <TextView
        android:id="@+id/sellerrating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	app:layout_constraintTop_toBottomOf="@+id/sellerusername"
        android:textColor="@android:color/black" />
    <TextView
            android:id="@+id/posteddate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
	app:layout_constraintTop_toBottomOf="@+id/sellerrating"
            android:textColor="@android:color/black"/>
    <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
	app:layout_constraintTop_toBottomOf="@+id/posteddate"
            android:textColor="@android:color/black"/>
    <TextView
            android:id="@+id/paymenttype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
	app:layout_constraintTop_toBottomOf="@+id/price"
            android:textColor="@android:color/black"/>
    <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
	app:layout_constraintTop_toBottomOf="@+id/paymenttype"
            android:textColor="@android:color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>
